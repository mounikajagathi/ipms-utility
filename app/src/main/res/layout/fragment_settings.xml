                android:textSize="@dimen/std_txt_medium"
                android:visibility="@{viewModel.widgetVisibility ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@id/lineBackUp"
                app:layout_constraintEnd_toStartOf="@id/settings_guideline_end"
                app:layout_constraintStart_toEndOf="@id/settings_guideline_start"
                app:layout_constraintTop_toBottomOf="@id/txtLiveLocation"
                app:layout_constraintVertical_chainStyle="packed" />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchLiveLocation"
                app:layout_constraintBottom_toBottomOf="@id/txtLiveLocationData"
                app:layout_constraintEnd_toEndOf="@id/txtLiveLocationData"
                app:layout_constraintHorizontal_bias="1"
                android:visibility="@{viewModel.widgetVisibility ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@id/txtLiveLocationData"
                app:layout_constraintTop_toTopOf="@id/txtLiveLocationData"
                app:layout_constraintVertical_chainStyle="packed"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgLiveLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:visibility="@{viewModel.widgetVisibility ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/txtLiveLocationData"
                app:layout_constraintEnd_toStartOf="@id/settings_guideline_start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtLiveLocationData"
                app:srcCompat="@drawable/ic_calender_for_tax" />

            <View
                android:id="@+id/lineBackUp"
                android:layout_width="0dp"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/std_space_max"
