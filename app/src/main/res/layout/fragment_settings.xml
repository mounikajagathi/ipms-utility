                app:layout_constraintBottom_toTopOf="@id/txtBackUp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtLiveLocationData"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintVertical_chainStyle="packed" />


            <TextView
                android:id="@+id/txtBackUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_space_semi"
                android:layout_marginBottom="@dimen/std_space_semi"
                android:text="@string/settings_backup"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/std_txt_medium"
                app:layout_constraintBottom_toTopOf="@id/txtBackUpSelect"
                app:layout_constraintEnd_toStartOf="@id/settings_guideline_end"
                app:layout_constraintStart_toEndOf="@id/settings_guideline_start"
                app:layout_constraintTop_toBottomOf="@id/lineBackUp"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/txtBackUpSelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.onBackupBtnClick()}"
                android:textColor="@color/colorBlack"
                android:text="@string/settings_backup_select"
                android:textSize="@dimen/std_txt_medium"
                android:paddingTop="@dimen/std_space_normal"
                android:paddingBottom="@dimen/std_space_normal"
                app:layout_constraintBottom_toTopOf="@id/txtFetchBackUpSelect"
                app:layout_constraintEnd_toStartOf="@id/settings_guideline_end"
                app:layout_constraintStart_toEndOf="@id/settings_guideline_start"
                app:layout_constraintTop_toBottomOf="@id/txtBackUp"
                app:layout_constraintVertical_chainStyle="packed" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBackUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@id/txtBackUpSelect"
                app:layout_constraintEnd_toStartOf="@id/settings_guideline_start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtBackUpSelect"
                app:srcCompat="@drawable/ic_calender_for_tax" />



            <TextView
                android:id="@+id/txtFetchBackUpSelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.onFetchBtnClick()}"
                android:textColor="@color/colorBlack"
                android:text="@string/settings_fetch"
                android:textSize="@dimen/std_txt_medium"
                android:paddingTop="@dimen/std_space_normal"
                android:paddingBottom="@dimen/std_space_normal"
                android:layout_marginTop="@dimen/std_space_max"
                app:layout_constraintBottom_toTopOf="@id/line_sync"
                app:layout_constraintEnd_toStartOf="@id/settings_guideline_end"
                app:layout_constraintStart_toEndOf="@id/settings_guideline_start"
                app:layout_constraintTop_toBottomOf="@id/txtBackUpSelect"
                app:layout_constraintVertical_chainStyle="packed" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgFetchBackUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@id/txtFetchBackUpSelect"
                app:layout_constraintEnd_toStartOf="@id/settings_guideline_start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtFetchBackUpSelect"
                app:srcCompat="@drawable/ic_calender_for_tax" />


            <View
                android:id="@+id/line_sync"
                android:layout_width="0dp"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/std_space_max"
                android:background="@color/cmnLightGrey"
                app:layout_constraintBottom_toTopOf="@id/txtSync"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtFetchBackUpSelect"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintVertical_chainStyle="packed" />


            <TextView
                android:id="@+id/txtSync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_space_semi"
                android:layout_marginBottom="@dimen/std_space_semi"
                android:text="@string/settings_sync"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/std_txt_medium"
                app:layout_constraintBottom_toTopOf="@id/txtSyncWithServer"
                app:layout_constraintEnd_toStartOf="@id/settings_guideline_end"
                app:layout_constraintStart_toEndOf="@id/settings_guideline_start"
                app:layout_constraintTop_toBottomOf="@id/line_sync"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/txtSyncWithServer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/std_space_large"
                android:onClick="@{()->viewModel.onSyncBtnClick()}"
                android:text="@string/settings_sync_with_server"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/std_txt_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/settings_guideline_end"
                app:layout_constraintStart_toEndOf="@id/settings_guideline_start"
                app:layout_constraintTop_toBottomOf="@id/txtSync"
                app:layout_constraintVertical_chainStyle="packed" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgSync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@id/txtSyncWithServer"
                app:layout_constraintEnd_toStartOf="@id/settings_guideline_start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtSyncWithServer"
                app:srcCompat="@drawable/ic_calender_for_tax" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
