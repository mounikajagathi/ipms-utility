<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/std_space_normal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/textviewTitle"
        android:gravity="center"
        android:layout_marginTop="@dimen/std_space_medium"
        android:textSize="@dimen/std_txt_medium_x"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textviewMessgae"
        android:gravity="center"
        android:layout_marginTop="@dimen/std_space_medium"
        android:textSize="@dimen/std_txt_medium"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/std_space_medium"
       android:orientation="vertical">

       <Button
           android:layout_width="match_parent"
           android:layout_height="@dimen/std_btn_medium"
           android:layout_weight=".5"
           style="@style/verification_btn"
           android:id="@+id/btnCondition1"
          />
       <Button
           android:layout_width="match_parent"
           android:layout_height="@dimen/std_btn_medium"
           android:layout_weight=".5"
           style="@style/verification_btn"
           android:id="@+id/btnCondition2" />
       <Button
           android:layout_width="match_parent"
           style="@style/verification_btn"
           android:layout_height="@dimen/std_btn_medium"
           android:id="@+id/btnCancel"
           />
   </LinearLayout>
</LinearLayout>