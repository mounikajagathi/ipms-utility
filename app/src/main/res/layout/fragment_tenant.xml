                        android:text="@{viewModel.tenantNative}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/std_txt_medium"
                        app:adapter="@{viewModel.tenantNativeList}" />

                </com.google.android.material.textfield.TextInputLayout>

