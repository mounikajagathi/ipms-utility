                    app:layout_constraintTop_toTopOf="@id/layoutAmount"
                    app:srcCompat="@drawable/ic_no_data" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutNative"
                    style="@style/AppCommonTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_space_mini"
                    android:visibility="@{!viewModel.isTeleCall ? View.VISIBLE : View.GONE}"
