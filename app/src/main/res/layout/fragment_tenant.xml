                        android:layout_height="wrap_content"
                        android:hint="@string/tenant_email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:minHeight="@dimen/std_edt_txt_height_medium"
                        android:text="@{viewModel.tenantEmail}"
