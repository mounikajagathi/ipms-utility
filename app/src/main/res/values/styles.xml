<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/std_txt_medium</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_backspace_black_24dp</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/colorWhite</item>
    </style>
    <style name="AppCommonARHint" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/std_txt_small_xx</item>
        <item name="android:textColor">@color/cmn_msg_color</item>
        <item name="android:paddingLeft">@dimen/std_space_micro</item>
    </style>
    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>
    <style name="verification_btn">
        <item name="android:background">@color/colorPrimary</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/std_txt_medium</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/std_space_micro</item>
        <item name="android:layout_height">@dimen/std_btn_large</item>>
    </style>
    <style name="Toolbar.TitleText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppCommonTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/cmnTxtInputLayoutColor</item>
        <item name="hintTextAppearance">@style/AppCommonInputTextHint</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="passwordToggleTint">@color/cmnTxtInputLayoutColor</item>
        <item name="colorControlNormal">@color/cmnTxtInputLayoutColor</item>
        <item name="colorControlActivated">@color/cmnTxtInputLayoutColor</item>
        <item name="colorControlHighlight">@color/cmnTxtInputLayoutColor</item>
        <item name="colorPrimary">@color/cmnTxtInputLayoutColor</item>
        <item name="colorPrimaryDark">@color/cmnTxtInputLayoutColor</item>
        <item name="colorAccent">@color/cmnTxtInputLayoutColor</item>
    </style>

    <style name="AppCommonInputTextHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/std_txt_small_xx</item>
        <item name="android:textColor">@color/cmnTxtInputLayoutColor</item>
    </style>
</resources>
